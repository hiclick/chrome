{
	"author": "4what",
	"homepage_url": "http://4what.github.com/",

	"manifest_version": 2,

	"name": "IP Helper",
	"version": "1.0",

	"description": "Powered by 4what @ PCGROUP",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		},
		"default_popup": "",
		"default_title": ""
	},

	"background": {
		"scripts": [
			"js/jquery/jquery-1.8.3.min.js",

			"js/bg.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [],
			"js": [
				"js/jquery/jquery-1.8.3.min.js",

				"js/core.js"
			]
		}
	],
	"options_page": "options.html",
	"permissions": [
		"<all_urls>",
		"storage",
		"tabs"
	]
}
